<div class="container text-center text-capitalize">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Estoque</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {{#each posts}}
            <tr>
                <td>
                    {{dataValues.nome}}
                </td>
                <td>
                    {{dataValues.estoque}}
                </td>
                <td>
                    <a href="/update/{{dataValues.id}}"><button class="btn btn-warning">Atualizar</button></a>
                    <a href="/deletar/{{dataValues.id}}"><button class="btn btn-danger">Deletar</button></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
<a href="/cadastro"><button class="btn btn-success">Cadastrar produtos</button></a>
</div>